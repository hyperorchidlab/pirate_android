<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/layout_title"
        android:id="@+id/title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/miningMachineRecyclerView"
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        android:background="@color/color_ffffff"
        app:layout_constraintBottom_toTopOf="@+id/pinAllMinersTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/pinAllMinersTv"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/mine_machine_list_pin_all_miners"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/color_ffffff"
        android:background="@color/color_6c77ac"
        app:layout_constraintEnd_toStartOf="@+id/refreshMinetv"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/refreshMinetv"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@+id/pinAllMinersTv"
        android:text="@string/refresh_mine"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/color_ffffff"
        android:background="@color/color_f0be50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="45dp" />
</android.support.constraint.ConstraintLayout>