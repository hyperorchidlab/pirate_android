<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_transfer_qr">
    <include layout="@layout/layout_title"
        android:id="@+id/title"/>
    <ImageView
        android:id="@+id/bgWhiteIv"
        android:layout_width="0dp"
        android:layout_height="466dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/color_ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/hopAddressLabTv"
        android:layout_width="wrap_content"
        android:text="@string/hop_address"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/bgWhiteIv"
        app:layout_constraintStart_toStartOf="@+id/bgWhiteIv"
        app:layout_constraintEnd_toEndOf="@+id/bgWhiteIv"
        android:textColor="@color/color_4d4d4d"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/hopAddressTv"
        android:layout_width="0dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        tools:text="yalsjfsafiasnfkasdfkljaoasijdfnaskldjfaljsdfasdf"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_rectangle_round4_ffffff_strock1_dcdde0"
        app:layout_constraintTop_toBottomOf="@+id/hopAddressLabTv"
        app:layout_constraintStart_toStartOf="@+id/bgWhiteIv"
        app:layout_constraintEnd_toEndOf="@+id/bgWhiteIv"
        android:textColor="@color/color_4d4d4d"
        android:layout_height="46dp"/>
    <ImageView
        android:id="@+id/hopAddressQRIv"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/hopAddressTv"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/hopqr"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="@+id/bgWhiteIv"
        app:layout_constraintEnd_toEndOf="@+id/bgWhiteIv"
        app:layout_constraintDimensionRatio="h,1:1"
        android:layout_height="0dp"/>
</android.support.constraint.ConstraintLayout>