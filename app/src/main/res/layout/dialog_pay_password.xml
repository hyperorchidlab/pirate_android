<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/bg_dialog_pay_password"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/titleTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/color_4d4d4d"
        android:text="@string/enter_password"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/keyWordView"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="16dp"
        android:paddingEnd="80dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:importantForAutofill="no"
        tools:ignore="LabelFor"
        android:textCursorDrawable="@drawable/cursor"
        android:textColor="@color/color_4d4d4d"
        android:inputType="textPassword"
        android:background="@android:color/transparent"
        android:drawableBottom="@drawable/split_line"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/sureTv"
        android:layout_width="60dp"
        android:text="@string/sure"
        android:textSize="16sp"
        android:textColor="@color/color_ffffff"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/keyWordView"
        app:layout_constraintBottom_toBottomOf="@+id/keyWordView"
        android:background="@drawable/bg_hop_transfer_transfer"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_height="40dp" />
</android.support.constraint.ConstraintLayout>