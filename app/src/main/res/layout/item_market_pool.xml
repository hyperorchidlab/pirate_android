<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.hop.pirate.util.Utils"/>
        <variable
            name="item"
            type="com.hop.pirate.viewmodel.PacketsMarketItemVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="16dp"
        android:background="@{item.background}">

        <TextView
            android:id="@+id/mine_pool_name_tv"
            android:layout_width="match_parent"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@{item.minePool.name}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mine_pool_address_tv"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:text="@{@string/websiteAddress + item.minePool.address}"
            android:textColor="@color/color_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mine_pool_name_tv"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mortgage_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@{@string/gtn + Utils.ConvertCoin(item.minePool.mortgageNumber)}"
            android:textColor="@color/color_white"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mine_pool_address_tv" />


        <TextView
            android:id="@+id/email_tv"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:text="@{@string/email + item.minePool.email}"
            android:textColor="@color/color_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mortgage_number_tv"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/website_address_tv"
            android:layout_width="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:text="@{@string/websiteAddress + item.minePool.websiteAddress}"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_tv"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/recharge_tv"
            android:layout_width="82dp"
            android:text="@string/recharge_recharge"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:textStyle="bold"
            android:textSize="18sp"
            app:onClickCommand="@{item.rechargeCommand}"
            android:textColor="@{item.textColor}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_buy_packet"
            android:layout_height="44dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>