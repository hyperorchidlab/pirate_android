<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/topbgIv"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/contentDescription"
        android:background="@drawable/bg_minpool_top"
        android:layout_height="64dp" />

    <TextView
        android:id="@+id/minePoolNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="6dp"
        tools:text="名字"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/refundTimeTv"
        android:layout_width="wrap_content"
        android:textColor="@color/color_ffffff"
        android:textSize="10sp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@+id/minePoolNameTv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/rechargeTv"
        android:layout_width="72dp"
        android:layout_height="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        tools:text="续费"
        android:gravity="center"
        android:textColor="@color/color_6791c8"
        app:layout_constraintTop_toTopOf="@+id/topbgIv"
        android:background="@drawable/bg_buy_packet"
        app:layout_constraintBottom_toBottomOf="@+id/topbgIv"
        android:text="@string/wallet_renewal_fee" />


    <ImageView
        android:id="@+id/bottomBgIv"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/contentDescription"
        app:layout_constraintTop_toBottomOf="@+id/topbgIv"
        android:background="@drawable/bg_minepool_bottom"
        android:layout_height="64dp" />


    <TextView
        android:id="@+id/packetsTv"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        tools:text="流量"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textStyle="bold"
        android:textColor="@color/color_ffffff"
        app:layout_constraintTop_toTopOf="@+id/bottomBgIv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tokenTv"
        android:gravity="start" />

    <TextView
        android:id="@+id/tokenTv"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        tools:text="token"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/color_ffffff"
        app:layout_constraintTop_toTopOf="@+id/bottomBgIv"
        app:layout_constraintStart_toEndOf="@+id/packetsTv"
        app:layout_constraintEnd_toStartOf="@+id/creditTv"
        android:gravity="start" />

    <TextView
        android:id="@+id/creditTv"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tokenTv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="credit"
        android:textColor="@color/color_ffffff"
        app:layout_constraintTop_toTopOf="@+id/bottomBgIv" />


    <View
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/split_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0.5dp" />

</android.support.constraint.ConstraintLayout>