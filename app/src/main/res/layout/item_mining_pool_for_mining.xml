<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="67dp">

    <TextView
        android:id="@+id/poolNameTv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/color_4d4d4d"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/poolStatusTv"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/color_6ab8ff"
        tools:text="状态"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/poolNameTv"
        app:layout_constraintBottom_toBottomOf="@+id/poolNameTv"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/split_line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0.5dp" />
</android.support.constraint.ConstraintLayout>