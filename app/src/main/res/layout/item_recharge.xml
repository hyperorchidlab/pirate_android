<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rectangle_round3_ffffff">

    <TextView
        android:id="@+id/minePoolNameTv"
        android:layout_width="match_parent"
        android:textColor="@color/color_ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/minePoolAddressTv"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="@color/color_ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minePoolNameTv"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mortgageNumberTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/color_ffffff"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minePoolAddressTv" />


    <TextView
        android:id="@+id/emailTv"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:textColor="@color/color_ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mortgageNumberTv"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/websiteAddressTv"
        android:layout_width="wrap_content"
        android:textColor="@color/color_ffffff"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTv"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/rechargeTv"
        android:layout_width="82dp"
        android:text="@string/recharge_recharge"
        android:gravity="center"
        android:layout_marginEnd="12dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/color_ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_buy_packet"
        android:layout_height="44dp" />


</android.support.constraint.ConstraintLayout>